#-*-conf-*-

autodetach      on
vbell           on
defscrollback   2048
startup_message off

setenv LC_CTYPE en_US.UTF-8
defutf8 on

termcapinfo rxvt-unicode ti@:te@
terminfo    rxvt-unicode ti@:te@:
#term        screen-256color
#term        xterm

# escape
escape "^  "

# change window
#bindkey "^[Od" prev		# ctrl-left
#bindkey "^[Oc" next		# ctrl-right
# change region
bindkey "^[Oa" focus up
bindkey "^[Ob" focus down

hardstatus on
#hardstatus string '%{= kg}[%{G}%H%{g}][%= %{=kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{G}%1` %{B}%D(%M %d) %{W}%c%{g}]'
#hardstatus alwayslastline '%{= M} %H%{= G} %l %= %{= w}%-w%{+b r}%n*%t%{-b r}%{w}%+w %= %{c}%d %D %{B}%c '
hardstatus alwayslastline '%{= g}%-w%{+b R}%n*%t%{-b R}%{g}%+w %= %{= d} %H%{= B} %l'
